# .env.example

# General
PUID=1000
PGID=1000
TZ=Etc/UTC

# BookStack app settings
APP_URL=http://localhost:6875
APP_KEY=your_app_key_here  # Replace with a real one later

# DB connection from BookStack container
DB_HOST=bookstack_db
DB_PORT=3306
DB_USERNAME=bookstack
DB_PASSWORD=your_db_password_here
DB_DATABASE=bookstackapp

# DB internal setup (mariadb container)
MYSQL_ROOT_PASSWORD=your_root_db_password
